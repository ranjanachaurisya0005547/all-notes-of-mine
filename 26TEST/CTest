Task 5:
//WAP to input your name and check length of name
#include<stdio.h>
#include<conio.h>
#include<string.h>
void main()
{
 char name[100];
 clrscr();
 printf("Enter Your Name:");
 gets(name);
 printf("Length of Name=%d",strlen(name));
 getch();
}

OR

//WAP to input your name and check length of name
#include<stdio.h>
#include<conio.h>
void main()
{
 char name[100];
 int i,count=0;
 clrscr();
 printf("Enter Your Name:");
 gets(name);
 //printf("Length of Name=%d",strlen(name));
 for(i=0;name[i]!='\0';i++)
 {
   if(name[i]!=' ')
   count++;
 }
 printf("Length of Name=%d",count);

 getch();
}












































































