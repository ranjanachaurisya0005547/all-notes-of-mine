Task 3:
//WAP to input all element of 3*3 matrix and print transpose matrix
//(exchage row and columns)
#include<stdio.h>
#include<conio.h>
void main()
{
 int a[3][3],i,j;
 clrscr();
 printf("enter the 3*3 matrix element:");
 for(i=0;i<3;i++)
 {
    for(j=0;j<3;j++)
    {
      scanf("%d",&a[i][j]);
    }
 }

 printf("Transpose Matrix element is:\n");
  for(i=0;i<3;i++)
 {
    for(j=0;j<3;j++)
    {
      printf("%d\t",a[j][i]);
    }
    printf("\n");
 }

 getch();
}
