Task 4:
//WAP to input value of N and R and calculate NCR value.
#include<stdio.h>
#include<conio.h>
int getfact(int);
void main()
{
 int n,r,r1,r2,r3,ncr;
 clrscr();
 printf("Enter value of N to calculate NCR:");
 scanf("%d",&n);
 printf("Enter the value of R to calculate NCR:");
 scanf("%d",&r);

 r1=getfact(n);
 r2=getfact(r);
 r3=getfact(n-r);

 ncr=r1/(r2*r3);
 printf("NCR of Given Number=%d",ncr);
 getch();
}
int getfact(int num)
{
  int i,fact=1;
  for(i=num;i>0;i--)
  {
    fact=fact*i;
  }
  return fact;
}
