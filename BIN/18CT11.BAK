double getgst(long int p)
{
  double gst;
  if(p>=1&&p<=1000)
  {
     gst=(p*5)/100;
  }
  else if(p>=1001&&p<=5000)
  {
     gst=(p*10)/100;
  }
  else if(p>=5001)
  {
    gst=(p*15)/100;
  }
  p=p+gst;
  return p;
}



